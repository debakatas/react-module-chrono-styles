{
    "extends": ["wesbos"],
    "rules": {
        "prefer-const": "off",
        "react/prop-types": "off",
        "react-hooks/exhaustive-deps": "off",
        "no-shadow": "warn",
        "jsx-a11y/click-events-have-key-events": "off",
        "jsx-a11y/no-noninteractive-element-interactions": "off",
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "bracketSpacing": true,
                "endOfLine": "lf",
                "printWidth": 60,
                "semi": true,
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5",
                "useTabs": false
            }
        ]
    }
}

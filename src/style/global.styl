*
    &
    &::after
    &::before
        box-sizing: border-box
        margin: 0
        padding: 0
        font-family: sans-serif
        object-fit: contain
        font-size: inherit
        transition: all 0.15s ease-in-out

button
    border: 0
    background: transparent

html
body
    font-size: 16px
    height: 100vh
    overflow: hidden
    width: 100vw

body
    background-image: linear-gradient(45deg, var(--purple), var(--green), var(--blue))
    display: flex
    justify-content: center
    align-items: center
